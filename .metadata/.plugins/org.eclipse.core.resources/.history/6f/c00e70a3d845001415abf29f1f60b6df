package com.example.components;

import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

import org.apache.tapestry5.*;
import org.apache.tapestry5.annotations.*;
import org.apache.tapestry5.ioc.annotations.*;
import org.apache.tapestry5.BindingConstants;
import org.apache.tapestry5.SymbolConstants;

/**
 * Layout component for pages of application newapp.
 */
@Import(stylesheet = "context:layout/layout.css")
public class Layout
{
	
	public String getDateAndTime(){
		Date date = new Date();
		
		Date date1 = new Date();
		DateFormat df = new SimpleDateFormat("EEE");
		String day = df.format(date1);
		
		DateFormat df1 = new SimpleDateFormat("MM");
		String month = df1.format(date1);
		
		return date.getDate()+" "+day+" "+month+" "+date.getHours()+":"+date.getMinutes();
	}
    
}
